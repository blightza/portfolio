<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
              <h1>Welcome to my blog posts</h1>
           <p>
              <a class="btn btn-primary btn-lg" href="/blogs/new">Add New Blog Post</a>
           </p>
        </div>
     
</header>

<div class="row">
    <div class="col-lg-12">
        <h3>Current Blogs</h3>
    </div>
</div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap">
          <% blogs.forEach(function(blog){ %>
          <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                  <div class="caption">
                      <h4><%= blog.name %></h4>
                  </div>
                   <p>
                      <a href="/blogs/<%= blog._id %>" class="btn btn-primary">More Info</a>
                   </p>
              </div>
             
          </div>
      <% }); %>
  </div>
</div>

<% include ../partials/footer %>